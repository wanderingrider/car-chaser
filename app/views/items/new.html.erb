<%= render "shared/second-header" %>
<div class="items-sell-contents">
  
  
  <div class="items-sell-main">
    <h2 class="items-sell-title">盗難情報情報を入力</h2>
    <%= form_with model: @item, local: true do |f| %>

    
    <%= render 'shared/error_messages', model: f.object %>
    

  
    <div class="img-upload">
      <div class="weight-bold-text">
        車両画像
        <span class="indispensable">必須</span>
      </div>
      <div class="click-upload">
        <p>
          クリックしてファイルをアップロード
        </p>
        <%= f.file_field :image, id:"item-image"  %>
      </div>
    </div>
    
    
    <div class="new-items">
      <div class="weight-bold-text">
        車種名
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :information_name, class:"items-text", id:"item-name", placeholder:"車種名", maxlength:"40" %>
      <div class="items-explain">
        <div class="weight-bold-text">
          盗難時の状況
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_area :description, class:"items-text", id:"item-info", placeholder:"盗難状況の詳細など。" ,rows:"7" ,maxlength:"1000" %>
      </div>
    </div>
    

    
    <%#div class="items-detail">
      <div class="weight-bold-text">車両の詳細</div>
      <div class="form">
        <div class="weight-bold-text">
          年式
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:category_id, Category.all, :id, :name , {class:"select-box", id:"item-category"}) %>
        <%#div class="weight-bold-text">
          車両の状態
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:product_status_id, ProductStatus.all, :id, :name, {class:"select-box", id:"item-sales-status"}) %>
      

    
   <div class="items-detail">


    <div class="form">
  
      <div class='weight-bold-text'>
        <label class="form-text">盗難にあった日付</label>
        <span class="indispensable">必須</span>
      </div>
      <div class='input-theft-wrap'>
        <%= raw sprintf(
                  f.date_select(
                    :theft_day,
                    class:'select-theft',
                    id:"theft-date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 1930,
                    end_year: (Time.now.year - 5),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
      </div>            
      
    
      <div class="weight-told-text">
          盗難にあった場所
          <span class="indispensable">必須</span>
      </div>
        <%= f.collection_select(:theft_place_id, TheftPlace.all, :id, :name, {class:"select-box", id:"item-theft-place"}) %>

      <div class="weight-told-text">
          盗難にあった地域（MAP情報も合わせて掲載できます。）
          <span class="indispensable">必須</span>
      </div>
        <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {class:"select-box", id:"item-prefecture"}) %>
    
    </div>
   </div>  

      <div class="caution">
      <p class="sentence">
        <a href="#">禁止されている情報、</a>
        <a href="#">行為</a>
        を必ずご確認ください。
        </p>
      </div>
  
    
    <div class="sell-btn-contents">
      <%= f.submit "提供する" ,class:"sell-btn" %>
      <%=link_to 'もどる', root_path, class:"back-btn" %>
    </div>
    
  </div>
  <% end %>

  <%= render 'shared/footer' %>
</div>